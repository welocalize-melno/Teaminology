<?xml version="1.0" encoding="UTF-8"?>

<web-app id="WebApp_ID"
         version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
        >

    <display-name>TeaminologyWeb</display-name>

    <!-- Context Params -->

    <!-- General Params -->

    <servlet>
        <servlet-name>Teaminology</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Teaminology</servlet-name>
        <url-pattern>/teaminology_ctrler/*</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/applicationContext*.xml
        </param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.teaminology.hp.servlet.LoginServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/newell/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImpExpServlet</servlet-name>
        <servlet-class>com.teaminology.hp.servlet.ImpExpServlet</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>ImpExpServlet</servlet-name>
        <url-pattern>/impExp_serv</url-pattern>
    </servlet-mapping>
   <!--  <servlet>
        <servlet-name>UpdateLucene</servlet-name>
        <servlet-class>com.teaminology.hp.servlet.UpdateLucene</servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateLucene</servlet-name>
        <url-pattern>/updateLucene</url-pattern>
    </servlet-mapping> -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.teaminology.hp.servlet.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>1440</session-timeout>
    </session-config>

</web-app>
